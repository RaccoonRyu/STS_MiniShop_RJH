<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GoodsMapper"><!-- 상품 관리용 매퍼 -->
<!-- mapper.xml에 이름(네임스페이스)을 부여하여 해당 xml 매퍼를 찾아갈 수 있게 함 
(id가 같지만 소속된 매퍼가 다른(네임스페이스가 다른) sql의 충돌 방지) -->

    <select id="goodsRetrieve" resultType="GoodsDTO" 
	parameterType="string">
	select gCode,gCategory,gName,gContent,gPrice,gImage
	from goods
	where gCode= #{gCode}
	</select>
	
	<select id="goodsList" resultType="GoodsDTO" 
	parameterType="string">
	select gCode,gCategory,gName,gContent,gPrice,gImage
	from goods
	where gCategory= #{gCategory}	
	</select>

</mapper>